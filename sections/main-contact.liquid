{% schema %}
{
  "name": "Contact Page",
  "tag": "section",
  "class": "contact-section",
  "settings": [
    {
      "type": "header",
      "content": "Page Content"
    },
    {
      "type": "text",
      "id": "page_title",
      "label": "Page Title",
      "default": "Contact us",
      "info": "Main heading for the contact page"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Have a question? We would love to help!",
      "info": "Subtitle below the main heading"
    },
    {
      "type": "richtext",
      "id": "contact_content",
      "label": "Contact Content",
      "default": "<p>If you have any queries about an order, want to know more about our products, or our brand, please get in touch. Have you had a look at our <strong><a href=\"/pages/faq\">FAQ</a></strong>? We are constantly updating it, so your answer might be there already!</p><p>You can also email us at <strong>support@fableandmane.com</strong></p><p>Namaste,</p><p>The Fable &amp; Mane family</p>",
      "info": "Main contact page content. You can use HTML tags for formatting."
    },
    {
      "type": "header",
      "content": "Stars Animation Settings"
    },
    {
      "type": "checkbox",
      "id": "show_stars",
      "label": "Show decorative stars",
      "default": true,
      "info": "Toggle animated stars around the title"
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star Color",
      "default": "#333333",
      "info": "Color of the decorative stars"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 500,
      "info": "Maximum width of the content area"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 40,
      "info": "Top padding for the section"
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 65,
      "info": "Bottom padding for the section"
    }
  ],
  "presets": [
    {
      "name": "Contact Page",
      "category": "Contact"
    }
  ]
}
{% endschema %}

<style>
  .contact-section {
    padding-top: {{ section.settings.section_padding_top | default: 40 }}px;
    padding-bottom: {{ section.settings.section_padding_bottom | default: 64 }}px;
  }

  .contact-content {
    max-width: {{ section.settings.content_width | default: 512 }}px;
  }

  .contact-content a{
    color: currentColor;
  }

  {% if section.settings.show_stars %}
  .star {
    position: absolute;
    width: 16px;
    height: 20px;
    opacity: 0.6;
    pointer-events: none;
  }

  .star svg {
    fill: {{ section.settings.star_color | default: '#333333' }};
  }

  /* Vị trí cố định cho từng ngôi sao */
  .star-1 {
    top: -19%;
    left: 15%;
    animation: starTwinkle 3s ease-in-out infinite;
    animation-delay: 0s;
  }

  .star-2 {
    top: -6%;
    right: 20%;
    animation: starFloat 4s ease-in-out infinite;
    animation-delay: 1s;
  }

  .star-3 {
    bottom: -15%;
    left: 20%;
    animation: starPulse 3.5s ease-in-out infinite;
    animation-delay: 2s;
  }

  .star-4 {
    bottom: -15%;
    right: 15%;
    animation: starTwinkle 4s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  .star-5 {
    top: 50%;
    left: -12%;
    animation: starFloat 3s ease-in-out infinite;
    animation-delay: 1.5s;
  }

  /* Animations */
  @keyframes starFloat {
    0%, 100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.4;
    }
    50% {
      transform: translateY(-8px) rotate(180deg);
      opacity: 0.8;
    }
  }

  @keyframes starTwinkle {
    0%, 100% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  @keyframes starPulse {
    0%, 100% {
      opacity: 0.4;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.15);
    }
  }
  {% else %}
  .stars-field {
    display: none;
  }
  {% endif %}

  /* Contact content styling */
  .contact-content p {
    margin-bottom: 1rem;
  }

  .contact-content strong {
    font-weight: 600;
  }

  .contact-content a {
    color: #0066cc;
    text-decoration: underline;
  }

  .contact-content a:hover {
    color: #004499;
  }

  /* Responsive cho mobile */
  @media (max-width: 768px) {
    .star {
      width: 24px;
      height: 30px;
    }

    .star-1 {
      top: 8%;
      left: 10%;
    }

    .star-2 {
      top: 12%;
      right: 15%;
    }

    .star-3 {
      bottom: 25%;
      left: 15%;
    }

    .star-4 {
      bottom: 20%;
      right: 10%;
    }

    .star-5 {
      top: 45%;
      left: 2%;
    }

    .contact-section {
      padding-top: {{ section.settings.section_padding_top | divided_by: 2 | default: 20 }}px;
      padding-bottom: {{ section.settings.section_padding_bottom | divided_by: 2 | default: 32 }}px;
    }
  }
</style>
