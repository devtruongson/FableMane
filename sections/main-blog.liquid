  <div class="blog-posts-section py-16 bg-gray-50">
    <div class="container mx-auto px-6">
      {% if blog.articles.size > 0 %}
        <!-- Blog Grid -->
        <div class="blog-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for article in blog.articles %}
            <article class="blog-card bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
              <!-- Article Image -->
              {% if article.image and section.settings.show_image %}
                <div class="article-image">
                  <a href="{{ article.url }}">
                    <img
                      src="{{ article.image | image_url: width: 400 }}"
                      alt="{{ article.image.alt | escape }}"
                      class="w-full h-64 object-cover"
                      loading="lazy"
                    >
                  </a>
                </div>
              {% endif %}

              <!-- Article Content -->
              <div class="article-content p-6">
                <!-- Article Category/Tags -->
                {% if article.tags.size > 0 %}
                  <div class="article-tags mb-3">
                    <span class="bg-amber-100 text-amber-800 px-3 py-1 rounded-full text-xs font-medium uppercase">
                      {{ article.tags.first }}
                    </span>
                  </div>
                {% endif %}

                <!-- Article Title -->
                <h3 class="article-title mb-3">
                  <a
                    href="{{ article.url }}"
                    class="text-xl font-semibold text-gray-900 hover:text-gray-700 transition-colors line-clamp-2"
                  >
                    {{ article.title }}
                  </a>
                </h3>

                <!-- Article Excerpt -->
                {% if article.excerpt.size > 0 %}
                  <p class="article-excerpt text-gray-600 text-sm mb-4 line-clamp-3">
                    {{ article.excerpt | strip_html | truncate: 120 }}
                  </p>
                {% endif %}

                <!-- Article Meta -->
                <div class="article-meta flex items-center justify-between text-xs text-gray-500">
                  {% if section.settings.show_date %}
                    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </time>
                  {% endif %}

                  {% if section.settings.show_author and article.author %}
