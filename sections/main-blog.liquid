                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              {% endif %}
            </nav>

            <!-- Pagination Info -->
            <div class="pagination-info text-center mt-4 text-sm text-gray-600">
              Showing {{ paginate.current_offset | plus: 1 }} -
              {{ paginate.current_offset | plus: paginate.page_size | at_most: paginate.items }} of
              {{ paginate.items }} articles
            </div>
          </div>
        {% endif %}

      {% else %}
