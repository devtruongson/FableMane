      <div class="item-side-wp">
        {% comment %} Check if there are custom ingredients from settings {% endcomment %}
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'ingredient' %}
              <div {{ block.shopify_attributes }}>
                <div class="item-wp-image {{ block.settings.ingredient_class | default: 'bakuchi' }}">
                  {% if block.settings.ingredient_image %}
                    <img
                      src="{{ block.settings.ingredient_image | image_url: width: 160 }}"
                      alt="{{ block.settings.ingredient_name | escape }}"
                      width="80"
                      height="80"
                    >
                  {% else %}
                    {% comment %} Default icon nếu không có image {% endcomment %}
                    <svg width="60" height="60" fill="currentColor" viewBox="0 0 24 24" class="text-gray-400">
                      <path d="M12 2L13.09 8.26L19 7L17.74 13.09L24 12L17.74 10.91L19 17L13.09 15.74L12 22L10.91 15.74L5 17L6.26 10.91L0 12L6.26 13.09L5 7L10.91 8.26L12 2Z"/>
                    </svg>
                  {% endif %}
                </div>
                <h3 class="item-title">{{ block.settings.ingredient_name | default: 'Ingredient' }}</h3>
              </div>
            {% endif %}
          {% endfor %}
        {% else %}
          {% comment %} Default ingredients nếu không có settings {% endcomment %}
          {% assign default_ingredients = 'Bakuchi,Amla,Dashmool,Castor Oil,Coconut,Turmeric,Banana,Ashwagandha'
            | split: ','
          %}
          {% assign default_images = 'https://fableandmane.com/cdn/shop/files/Bakuchi-Illustration_1_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/Amla_Ingredient_Icon_95x95_8db3d115-94d1-444c-ae50-1ab40a079216_3024x.png?v=1650467528,https://fableandmane.com/cdn/shop/files/51N1z5LkmYL_1_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/castor-oil_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/coco-oil_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/Turmeric_1_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/Banana-e1585315068782_1_3024x.png?v=1631813248,https://fableandmane.com/cdn/shop/files/Ashwagandha_3024x.png?v=1631813248'
