<style>
  /* Custom styles that can't be replicated with Tailwind */
  .scent-title .title-accent::before,
  .scent-title .title-accent::after {
    content: 'âœ¦';
    position: absolute;
    font-size: 24px;
    color: white;
    opacity: 0.8;
  }

  .scent-title .title-accent::before {
    top: -10px;
    left: -30px;
  }

  .scent-title .title-accent::after {
    top: -15px;
    right: -35px;
  }

  /* Gradient background - complex gradients need custom CSS */
  .scent-gradient-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #f9423a;
    z-index: 0;
  }

  .scent-gradient-bg::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 60%;
    height: 100%;
    background: #f9423a;
    z-index: 1;
  }
</style>

<section class="scent-gradient-bg bg-[#f9423a] relative overflow-hidden">
  <div class="grid grid-cols-1 lg:grid-cols-2  items-center">
    <!-- Content Side -->
    <div class="px-8 py-20 lg:px-16 lg:py-0 text-white z-10 relative flex justify-center">
      <div>
        {% if section.settings.title != blank %}
          <h2 class="text-5xl lg:text-7xl font-bold leading-tight mb-8 lg:mb-10">
            <span class="title-accent block relative">{{ section.settings.title }}</span>
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="text-base lg:text-lg font-second leading-relaxed max-w-md lg:max-w-lg opacity-95">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Image Side -->
    <div class="relative flex items-center justify-center">
      {% if section.settings.product_image != blank %}
        <img
          src="{{ section.settings.product_image | image_url: width: 800 }}"
          alt="{{ section.settings.product_image.alt | escape }}"
          class="w-full h-full w-auto h-auto object-cover z-10 relative"
          width="400"
          height="600"
          loading="lazy"
        >
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "The Scent Section",
  "tag": "section",
  "class": "scent-section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "The Scent"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A divine fresh, floral scent that blends Indian jasmine sambac, precious red champaca flowers and an unforgettably rich, warm base of cedarwood and tonka beans, transporting you to the divine city of Madurai in India.</p>"
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image",
      "info": "Recommended: High-resolution product image with transparent or minimal background"
    }
  ],
  "presets": [
    {
      "name": "The Scent Section",
      "settings": {
        "title": "The Scent",
        "description": "<p>A divine fresh, floral scent that blends Indian jasmine sambac, precious red champaca flowers and an unforgettably rich, warm base of cedarwood and tonka beans, transporting you to the divine city of Madurai in India.</p>"
      }
    }
  ]
}
{% endschema %}
