<div
  class="{% if section.settings.background_image != blank %}bg-cover bg-center bg-no-repeat relative{% endif %}"
  {% if section.settings.background_image != blank %}
    style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}'); position: relative;"
  {% else %}
    style="position: relative;"
  {% endif %}
>
  <div class="flex items-center container mx-auto justify-between gap-[20px] px-20 {% if section.settings.background_image != blank %}relative z-10{% endif %}">
    <div class="flex-1">
      <h3 class="text-4xl {% if section.settings.background_image != blank %}text-white{% endif %}">
        {{ section.settings.heading }}
      </h3>
      <a
        href="{{ section.settings.button_link }}"
        class="mt-4 inline-block font-[SofiaPro-Regular] px-6 py-3 bg-black text-white font-semibold hover:bg-gray-800 transition-colors rounded-full"
      >
        {{ section.settings.button_text }}
      </a>
    </div>
    <div class="w-1/2">
      {% if section.settings.image != blank %}
        <img
          class="max-h-[550px] object-contain"
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading | escape }}"
          width="800"
          height="550"
        >
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text with image + button",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Every ritual begins with the award-winning Holiroots Hair Oil"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Upload image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (optional)"
    }
  ],
  "presets": [
    {
      "name": "Text with image + button"
    }
  ]
}
{% endschema %}
