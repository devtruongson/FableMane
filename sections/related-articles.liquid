<section class="related-articles py-16 bg-gray-50">
  <div class="container mx-auto px-6">
    <!-- Header với icon -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-serif text-gray-900 mb-4">Related Articles</h2>
      <div class="flex justify-center items-center gap-4">
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L13.09 8.26L19 7L17.74 13.09L24 12L17.74 10.91L19 17L13.09 15.74L12 22L10.91 15.74L5 17L6.26 10.91L0 12L6.26 13.09L5 7L10.91 8.26L12 2Z"/>
        </svg>
        <div class="w-16 h-px bg-gray-300"></div>
        <svg class="w-4 h-4 text-gray-400 rotate-45" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L13.09 8.26L19 7L17.74 13.09L24 12L17.74 10.91L19 17L13.09 15.74L12 22L10.91 15.74L5 17L6.26 10.91L0 12L6.26 13.09L5 7L10.91 8.26L12 2Z"/>
        </svg>
        <div class="w-16 h-px bg-gray-300"></div>
        <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2L13.09 8.26L19 7L17.74 13.09L24 12L17.74 10.91L19 17L13.09 15.74L12 22L10.91 15.74L5 17L6.26 10.91L0 12L6.26 13.09L5 7L10.91 8.26L12 2Z"/>
        </svg>
      </div>
    </div>

    <!-- Articles Grid -->
    {% assign related_articles = blog.articles | where: 'id', '!=', article.id | limit: 3 %}
    {% if related_articles.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {% for related_article in related_articles %}
          <article class="related-article-card group cursor-pointer">
            <a href="{{ related_article.url }}" class="block">
              <!-- Image Container với custom shape -->
              <div class="relative mb-6 overflow-hidden">
                {% if related_article.image %}
                  <div class="relative w-full h-80 {% cycle 'red-shape', 'yellow-shape', 'green-shape' %}">
                    <img
                      src="{{ related_article.image | image_url: width: 400 }}"
                      alt="{{ related_article.image.alt | escape }}"
                      class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    >

                    <!-- Badge nếu có -->
                    {% if forloop.index == 2 %}
                      <div class="absolute top-4 right-4 w-12 h-12 bg-teal-500 rounded-full flex items-center justify-center">
                        <span class="text-white font-bold text-sm">N</span>
                      </div>
                    {% endif %}
                  </div>
                {% else %}
                  <div class="w-full h-80 {% cycle 'red-shape', 'yellow-shape', 'green-shape' %} flex items-center justify-center">
                    <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                {% endif %}
              </div>

              <!-- Content -->
              <div class="space-y-3">
                <!-- Category -->
                {% if related_article.tags.size > 0 %}
                  <div class="text-xs font-semibold text-gray-600 uppercase tracking-wider">
                    {{ related_article.tags.first }}
                  </div>
                {% endif %}

                <!-- Title -->
                <h3 class="text-xl font-serif text-gray-900 leading-tight group-hover:text-gray-700 transition-colors duration-200">
                  {{ related_article.title }}
                </h3>

                <!-- Excerpt -->
                {% if related_article.excerpt.size > 0 %}
                  <p class="text-sm text-gray-600 line-clamp-3">
                    {{ related_article.excerpt | strip_html | truncate: 100 }}
                  </p>
                {% endif %}

                <!-- Read More -->
                <div class="flex items-center text-sm font-medium text-gray-900 group-hover:text-gray-700 transition-colors duration-200">
                  READ
                  <svg
                    class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-200"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
    {% else %}
      <!-- Empty State -->
      <div class="text-center py-16">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No related articles found</h3>
        <p class="text-gray-600">Check back later for more content.</p>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Custom shapes cho từng card */
  .red-shape {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    clip-path: polygon(0% 0%, 85% 0%, 100% 15%, 100% 100%, 0% 100%);
  }

  .yellow-shape {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    clip-path: polygon(15% 0%, 100% 0%, 100% 100%, 0% 100%, 0% 15%);
  }

  .green-shape {
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    clip-path: polygon(0% 0%, 100% 0%, 85% 100%, 0% 100%);
  }

  /* Line clamp utility */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Hover effects */
  .related-article-card:hover .red-shape img,
  .related-article-card:hover .yellow-shape img,
  .related-article-card:hover .green-shape img {
    transform: scale(1.05);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .red-shape,
    .yellow-shape,
    .green-shape {
      clip-path: none;
      border-radius: 0.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Related Articles",
  "settings": [
    {
      "type": "range",
      "id": "articles_limit",
      "label": "Number of articles to show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_category",
      "label": "Show article categories",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show article excerpts",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Related Articles"
    }
  ]
}
{% endschema %}
