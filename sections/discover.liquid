<div
  class="discover-section w-full py-16"
  style="background-color: {{ section.settings.background_color }}"
>
  <div class="container mx-auto px-4 text-center max-w-3xl flex flex-col items-center">
    <h2
      class="text-4xl md:text-6xl font-bold mb-4"
      style="color: {{ section.settings.heading_color }}"
    >
      {{ section.settings.heading }}
    </h2>

    <div
      class="text-xl md:text-xl font-second max-w-xl"
      style="color: {{ section.settings.text_color }}"
    >
      {{ section.settings.description }}
    </div>

    {% if section.settings.button_text != blank %}
      <div class="mt-8">
        <a
          href="{{ section.settings.button_link }}"
          class="inline-block px-8 py-3 rounded-full font-medium text-sm md:text-base transition-all duration-300 font-second-semibold"
          style="
            background-color: {{ section.settings.button_background_color }};
            color: {{ section.settings.button_text_color }};
          "
        >
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Discover Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hair & Scalp Oils"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Discover our iconic Ayurvedic hair and scalp oils for a stronger, healthier mane.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f9423a"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#f9423a"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Discover Section",
      "category": "Custom Content"
    }
  ]
}
{% endschema %}
