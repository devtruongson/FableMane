<div class="product-card rounded-lg overflow-hidden hover:shadow-md transition-shadow duration-300 relative">
  {% if product.featured_media %}
    <div class="relative">
      <a href="{{ product.url }}">
        <img
          src="{{ product.featured_media | image_url: width: 600 }}"
          alt="{{ product.featured_media.alt | escape }}"
          class="w-full h-80 object-cover"
        >
      </a>

      {% if product.tags contains 'award' %}
        <div class="absolute top-3 left-3">
          <div class="bg-red-500 text-white text-xs px-3 py-2 rounded-full font-medium flex items-center">
            <svg class="w-3 h-3 mr-1" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
            BEST OF BEAUTY AWARD WINNER
          </div>
        </div>
      {% endif %}

      {% if product.tags contains 'new' %}
        <div class="absolute top-3 right-3">
          <div class="bg-yellow-400 text-black text-xs px-3 py-2 rounded-full font-bold">NEW!</div>
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="p-6">
    <h3 class="text-xl font-bold text-center mb-3 leading-tight">
      <a href="{{ product.url }}" class="hover:text-gray-700 transition-colors">
        {{ product.title }}
      </a>
    </h3>

    <div class="text-center mb-4">
      <p class="text-lg font-medium">
        {% if product.price_varies %}
          From {{ product.price_min | money }}
        {% else %}
          From {{ product.price | money }}
        {% endif %}
      </p>

      <!-- Star rating placeholder -->
      {% if product.metafields.reviews.rating %}
        <div class="flex items-center justify-center mt-2">
          <div class="flex text-red-500">
            {% assign rating = product.metafields.reviews.rating | times: 1.0 %}
            {% for i in (1..5) %}
              {% if i <= rating %}
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {% else %}
                <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {% endif %}
            {% endfor %}
          </div>
          <span class="ml-2 text-sm text-gray-600">({{ product.metafields.reviews.count | default: 0 }})</span>
        </div>
      {% endif %}
    </div>

    <form data-id="{{ product.variants.first.id }}" class="w-full">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button
        type="submit"
        class="mx-auto text-black border cursor-pointer border-gray-600 py-3 px-6 rounded-full font-semibold hover:bg-[#ffd2aa] hover:text-black transition-all duration-300 text-sm tracking-wide"
      >
        ADD TO BAG
      </button>
    </form>
  </div>
</div>
