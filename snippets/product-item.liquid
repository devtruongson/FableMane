<div class="product-item flex items-center justify-between bg-white border-b border-gray-200 py-4 px-4 hover:bg-gray-50 transition-colors duration-200"></div>
  <!-- Product Image & Info -->
  <div class="flex items-center flex-1">
    <!-- Product Image -->
    <div class="w-16 h-16 flex-shrink-0 mr-4">
      {% if product.featured_media %}
        <img
          src="{{ product.featured_media | image_url: width: 80 }}"
          alt="{{ product.featured_media.alt | escape }}"
          class="w-full h-full object-cover rounded-md"
        >
      {% else %}
        <div class="w-full h-full bg-gray-200 rounded-md flex items-center justify-center">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      {% endif %}
    </div>

    <!-- Product Details -->
    <div class="flex-1 min-w-0">
      <h3 class="text-sm font-medium text-gray-900 truncate">
        {{ product.title }}
      </h3>
      <p class="text-lg font-bold text-gray-900 mt-1">
        {% if product.price_varies %}
          From {{ product.price_min | money }}
        {% else %}
          {{ product.price | money }}
        {% endif %}
      </p>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex items-center space-x-3 ml-4">
    <!-- Expand/Collapse Button -->
    <button type="button" class="text-gray-400 hover:text-gray-600 transition-colors duration-200" onclick="toggleProductDetails(this)">
      <svg class="w-5 h-5 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
      </svg>
    </button>

    <!-- Add to Cart Button -->
    <form method="post" action="/cart/add" class="inline-block">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
      <button type="submit" class="w-10 h-10 bg-red-500 hover:bg-red-600 text-white rounded-full flex items-center justify-center transition-colors duration-200 shadow-md hover:shadow-lg">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
      </button>
    </form>
  </div>
</div>

<!-- Expandable Product Details (Hidden by default) -->
<div class="product-details hidden bg-gray-50 px-4 py-3 border-b border-gray-200">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Product Description -->
    <div>
      {% if product.description != blank %}
        <h4 class="text-sm font-medium text-gray-900 mb-2">Description</h4>
        <div class="text-sm text-gray-600 line-clamp-3">
          {{ product.description | strip_html | truncate: 200 }}
        </div>
      {% endif %}
    </div>

    <!-- Product Variants/Options -->
    <div>
      {% if product.variants.size > 1 %}
        <h4 class="text-sm font-medium text-gray-900 mb-2">Options</h4>
        <div class="space-y-1">
          {% for variant in product.variants limit: 3 %}
            <div class="flex justify-between items-center text-sm">
              <span class="text-gray-600">{{ variant.title }}</span>
              <span class="font-medium">{{ variant.price | money }}</span>
            </div>
          {% endfor %}
          {% if product.variants.size > 3 %}
            <div class="text-xs text-gray-500">+{{ product.variants.size | minus: 3 }} more options</div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="flex items-center justify-between mt-4 pt-3 border-t border-gray-200">
    <a href="{{ product.url }}" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
      View Full Details â†’
    </a>
    
    {% if product.available %}
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
        In Stock
      </span>
    {% else %}
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
        Out of Stock
      </span>
    {% endif %}
  </div>
</div>

<script>
function toggleProductDetails(button) {
  const productItem = button.closest('.product-item');
  const productDetails = productItem.nextElementSibling;
  const arrow = button.querySelector('svg');
  
  if (productDetails && productDetails.classList.contains('product-details')) {
    productDetails.classList.toggle('hidden');
    arrow.classList.toggle('rotate-180');
  }
}
</script>

<style>
.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
